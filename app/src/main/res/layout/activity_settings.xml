<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_filter_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:context=".activity.SettingsActivity">



    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:id="@+id/toolbar_setting"
        android:background="@color/colorPrimary"
        app:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>


    <LinearLayout
        android:id="@+id/layout_PH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_setting"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nồng độ PH"
            android:textStyle="bold"
            android:textSize="@dimen/activity_settings_title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:textColor="@color/colorPrimary"/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:id="@+id/sbPH"
            app:valuesAboveThumbs="true"
            app:textAboveThumbsColor="@android:color/holo_purple"
            app:absoluteMinValue="14.0"
            app:absoluteMaxValue="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhiệt độ"
            android:textStyle="bold"
            android:textSize="@dimen/activity_settings_title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:textColor="@color/colorPrimary"/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:id="@+id/sbTemp"
            app:valuesAboveThumbs="true"
            app:textAboveThumbsColor="@android:color/holo_purple"
            app:absoluteMinValue="60.0"
            app:absoluteMaxValue="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nồng độ Oxy"
            android:textStyle="bold"
            android:textSize="@dimen/activity_settings_title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:textColor="@color/colorPrimary"/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:id="@+id/sbOxy"
            app:valuesAboveThumbs="true"
            app:textAboveThumbsColor="@android:color/holo_purple"
            app:absoluteMinValue="15.0"
            app:absoluteMaxValue="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nồng độ muối"
            android:textStyle="bold"
            android:textSize="@dimen/activity_settings_title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:textColor="@color/colorPrimary"/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:id="@+id/sbSalt"
            app:valuesAboveThumbs="true"
            app:textAboveThumbsColor="@android:color/holo_purple"
            app:absoluteMinValue="35.0"
            app:absoluteMaxValue="5.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amoniac tự do"
            android:textStyle="bold"
            android:textSize="@dimen/activity_settings_title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:textColor="@color/colorPrimary"/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:id="@+id/sbNH4"
            app:valuesAboveThumbs="true"
            app:textAboveThumbsColor="@android:color/holo_purple"
            app:absoluteMinValue="1.0"
            app:absoluteMaxValue="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nồng độ NO2"
            android:textStyle="bold"
            android:textSize="@dimen/activity_settings_title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:textColor="@color/colorPrimary"/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:id="@+id/sbNO2"
            app:valuesAboveThumbs="true"
            app:textAboveThumbsColor="@android:color/holo_purple"
            app:absoluteMinValue="2.0"
            app:absoluteMaxValue="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nồng độ H2S"
            android:textStyle="bold"
            android:textSize="@dimen/activity_settings_title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:textColor="@color/colorPrimary"/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:id="@+id/sbH2S"
            app:valuesAboveThumbs="true"
            app:textAboveThumbsColor="@android:color/holo_purple"
            app:absoluteMinValue="2.0"
            app:absoluteMaxValue="0.0" />

    </LinearLayout>

</RelativeLayout>
